{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="form-container">
        <div class="form-header">
            <h1>Modifier mon mot de passe</h1>
        </div>
        <div class="form-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" id="password-change-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.second, 'Répéter le nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                {% if form.plainPassword.vars.errors|length > 0 %}
                    <div class="alert alert-danger mt-3">
                        {% for error in form.plainPassword.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}

                <button type="submit" class="btn btn-primary" id="change-password-button">Modifier le mot de passe</button>
            {{ form_end(form) }}

            <a href="{{ path('app_profile_index') }}" class="btn btn-secondary mt-3">Retour à mon compte</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const successMessage = document.getElementById('password-change-success');
            const changePasswordButton = document.getElementById('change-password-button');

            if (successMessage) {
                // Empêcher la redirection immédiate
                changePasswordButton.addEventListener('click', function(event) {
                    event.preventDefault(); // Empêche la soumission par défaut

                    if (confirm(successMessage.textContent + '\n\nCliquez sur OK pour être redirigé vers la page d\'accueil.')) {
                        // Si l'utilisateur clique sur OK, rediriger vers la page d'accueil
                        window.location.href = '{{ path('app_home') }}';
                    }
                });
            }
        });
    </script>
{% endblock %}