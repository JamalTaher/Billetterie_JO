{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="form-container">
        <div class="form-header">
            <h1>Modifier mon mot de passe</h1>
        </div>
        <div class="form-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" id="password-change-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    <div style="position: relative;">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        <span class="password-toggle" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;">
                            üëÅÔ∏è
                        </span>
                    </div>
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.plainPassword.second, 'R√©p√©ter le nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    <div style="position: relative;">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        <span class="password-toggle" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;">
                            üëÅÔ∏è
                        </span>
                    </div>
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                {% if form.plainPassword.vars.errors|length > 0 %}
                    <div class="alert alert-danger mt-3">
                        {% for error in form.plainPassword.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}

                <button type="submit" class="btn btn-primary" id="change-password-button">Modifier le mot de passe</button>
            {{ form_end(form) }}

            <a href="{{ path('app_profile_index') }}" class="btn btn-secondary mt-3">Retour √† mon compte</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInputs = document.querySelectorAll('input[type="password"]');
            const passwordToggles = document.querySelectorAll('.password-toggle');

            passwordToggles.forEach((toggle, index) => {
                toggle.addEventListener('click', function() {
                    const passwordInput = passwordInputs[index];
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        toggle.textContent = 'üëÅÔ∏è‚Äçüó®Ô∏è';
                    } else {
                        passwordInput.type = 'password';
                        toggle.textContent = 'üëÅÔ∏è';
                    }
                });
            });

            const successMessage = document.getElementById('password-change-success');
            const changePasswordButton = document.getElementById('change-password-button');

            if (successMessage) {
                changePasswordButton.addEventListener('click', function(event) {
                    event.preventDefault();

                    if (confirm(successMessage.textContent + '\n\nCliquez sur OK pour √™tre redirig√© vers la page d\'accueil.')) {
                        window.location.href = '{{ path('app_home') }}';
                    }
                });
            }
        });
    </script>
{% endblock %}