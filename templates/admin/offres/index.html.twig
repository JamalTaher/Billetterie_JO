{% extends 'admin/index.html.twig' %}

{% block body_content %}
    <h1>Gestion des Offres</h1>

    <a href="{{ path('admin_offres_creer') }}" class="btn btn-primary mb-3">Créer une nouvelle offre</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for offre in offres %}
                <tr>
                    <td>{{ offre.id }}</td>
                    <td>{{ offre.nom }}</td>
                    <td>
                        <a href="{{ path('admin_offres_modifier', {'id': offre.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('admin_offres_supprimer', {'id': offre.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">Aucune offre trouvée.</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}