{% extends 'admin/index.html.twig' %}

{% block body_content %}
    <h1>Gestion des Catégories</h1>

    <a href="{{ path('admin_categories_creer') }}" class="btn btn-primary mb-3">Créer une nouvelle catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('admin_categories_modifier', {'id': categorie.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('admin_categories_supprimer', {'id': categorie.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">Aucune catégorie trouvée.</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}