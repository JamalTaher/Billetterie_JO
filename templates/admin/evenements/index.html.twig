{% extends 'admin/index.html.twig' %}

{% block body_content %}
    <h1>Gestion des Événements</h1>

    <a href="{{ path('admin_evenements_creer') }}" class="btn btn-primary mb-3">Créer un nouvel événement</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.id }}</td>
                    <td>{{ evenement.nom }}</td>
                    <td>{{ evenement.categorie }}</td>
                    <td>{{ evenement.date ? evenement.date|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ evenement.lieu }}</td>
                    <td>
                        <a href="{{ path('admin_evenements_modifier', {'id': evenement.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('admin_evenements_supprimer', {'id': evenement.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6">Aucun événement trouvé.</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}