{% extends 'admin/index.html.twig' %}

{% block body_content %}
    <h1>Créer un nouvel événement</h1>

    {{ form_start(form, {'attr': {'class': 'mb-3'}}) }}
        {% for child in form %}
            <div class="mb-3">
                {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(child) }}
            </div>
        {% endfor %}
        <button type="submit" class="btn btn-primary">Créer l'événement</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_evenements_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}