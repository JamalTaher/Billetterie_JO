{# templates/admin/evenements/_delete_form.html.twig #}


<form method="post" action="{{ path('admin_evenement_delete', {'id': evenement.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
    <button class="btn btn-danger mt-3">Supprimer l'événement</button>
</form>