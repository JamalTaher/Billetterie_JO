{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% if panierAvecDetails is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix Unitaire</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in panierAvecDetails %}
                    <tr>
                        <td>{{ item.offre.nom }} - {{ item.evenement.nom }}</td>
                        <td>{{ item.prix }} €</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.prix * item.quantite }} €</td>
                        <td>
                            <button class="btn btn-danger btn-sm supprimer-panier-item"
                                    data-offre-id="{{ item.offre.id }}"
                                    data-evenement-id="{{ item.evenement.id }}">
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total :</strong></td>
                    <td><strong>{{ total }} €</strong></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <form method="post" action="{{ path('app_panier_checkout') }}">
    <button type="submit" class="btn btn-success">Passer à la caisse</button>
</form>
    {% endif %}
{% endblock %}